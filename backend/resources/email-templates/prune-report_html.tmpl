{{define "root"}}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>System Prune Report</title>
    <style>
        body { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; line-height: 1.6; color: #333; }
        .container { max-width: 600px; margin: 0 auto; padding: 20px; }
        .header { text-align: center; margin-bottom: 30px; }
        .logo { max-width: 150px; height: auto; }
        .card { background: #f9f9f9; border-radius: 8px; padding: 20px; margin-bottom: 20px; border: 1px solid #eee; }
        .stat { display: flex; justify-content: space-between; margin-bottom: 10px; border-bottom: 1px solid #eee; padding-bottom: 10px; }
        .stat:last-child { border-bottom: none; margin-bottom: 0; padding-bottom: 0; }
        .label { font-weight: 600; color: #555; }
        .value { font-family: monospace; font-size: 1.1em; color: #333; }
        .total { font-size: 1.2em; font-weight: bold; margin-bottom: 20px; text-align: center; color: #2ecc71; }
        .footer { font-size: 12px; color: #888; text-align: center; margin-top: 30px; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <img src="{{.LogoURL}}" alt="Arcane Logo" class="logo">
            <h2>System Prune Report</h2>
        </div>
        
        <div class="total">
            Total Reclaimed: {{.TotalSpaceReclaimed}}
        </div>

        <div class="card">
            <div class="stat">
                <span class="label">üì¶ Containers</span>
                <span class="value">{{.ContainerSpaceReclaimed}}</span>
            </div>
            <div class="stat">
                <span class="label">üñºÔ∏è Images</span>
                <span class="value">{{.ImageSpaceReclaimed}}</span>
            </div>
            <div class="stat">
                <span class="label">üíæ Volumes</span>
                <span class="value">{{.VolumeSpaceReclaimed}}</span>
            </div>
            <div class="stat">
                <span class="label">üèóÔ∏è Build Cache</span>
                <span class="value">{{.BuildCacheSpaceReclaimed}}</span>
            </div>
        </div>

        <div class="footer">
            <p>Generated by Arcane at {{.Time}}</p>
            <p><a href="{{.AppURL}}" style="color: #666; text-decoration: none;">Open Dashboard</a></p>
        </div>
    </div>
</body>
</html>
{{end}}
